set-font-size(value)
  font-size value
  if (!(value is inherit))
    font-size remify(value)

set-line-height(value)
  line-height value
  if (!(value is inherit))
    line-height unit(24/value, '')

remify(value)
  u = unit(value)
  if (u is 'px')
    return unit(value/16, 'rem')
  else
    return unit(value, u)

unselectable()
  -webkit-touch-callout none
  user-select none
